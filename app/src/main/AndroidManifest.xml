<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BoardGamer"
        tools:targetApi="31">

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.BoardGamer"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CreateGameNightActivity"
            android:exported="false"
            android:theme="@style/Theme.BoardGamer"
           />
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.BoardGamer"
            />
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.BoardGamer"
            />
        <activity
            android:name=".MessagesActivity"
            android:exported="true"
            android:theme="@style/Theme.BoardGamer"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.BoardGamer"
            />
        <activity
            android:name=".FoodActivity"
            android:exported="false"
            android:theme="@style/Theme.BoardGamer"
            />

        <activity
            android:name=".FoodChoiceOverview"
            android:exported="false"
            android:theme="@style/Theme.BoardGamer"
            />

        <activity
            android:name=".RatingActivity"
            android:exported="false"
            android:theme="@style/Theme.BoardGamer"
            android:windowSoftInputMode="adjustResize"
            />
        <activity
            android:name=".VotingActivity"
            android:exported="false"
            android:theme="@style/Theme.BoardGamer"/>

        <activity
            android:name=".SuggestionsActivity"
            android:exported="true"
            android:theme="@style/Theme.BoardGamer"
            android:windowSoftInputMode="adjustResize"/>

        <receiver android:name=".AlarmReceiver" android:exported="true"/>
        <receiver android:name=".NotificationActionReceiver" android:exported="true"/>
    </application>

</manifest>